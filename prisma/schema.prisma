generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TREASURER
  TEAM_REPRESENTATIVE
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum PaymentMethod {
  CASH
  TRANSFER
}

enum PaymentStatus {
  PENDING
  PARTIAL
  PAID
}

enum TournamentStatus {
  ACTIVE
  FINISHED
}

model Tournament {
  id        Int              @id @default(autoincrement())
  name      String
  day       DayOfWeek        @unique
  startDate DateTime         @default(now())
  status    TournamentStatus @default(ACTIVE)
  teams     Team[]
  expenses  Expense[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Team {
  id              Int        @id @default(autoincrement())
  name            String
  tournamentId    Int
  tournament      Tournament @relation(fields: [tournamentId], references: [id])
  
  // Conceptos Financieros
  registrationFee Decimal    @default(0) @db.Decimal(10, 2)
  arbitrationFee  Decimal    @default(0) @db.Decimal(10, 2)
  discountAmount  Decimal    @default(0) @db.Decimal(10, 2)
  
  userId          Int?
  user            User?      @relation(fields: [userId], references: [id])

  payments        Payment[]
  
  matchdayStatuses Json?     @db.JsonB // Stores { "1": "PAID", "2": "LATE" }
  
  active          Boolean    @default(true)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@index([tournamentId])
}

model Payment {
  id              Int           @id @default(autoincrement())
  teamId          Int
  team            Team          @relation(fields: [teamId], references: [id])
  
  amount          Decimal       @db.Decimal(10, 2)
  method          PaymentMethod
  
  transferRef     String?
  transferDate    DateTime?
  
  matchday        Int?
  
  recordedAt      DateTime      @default(now())
  notes           String?
  
  @@index([teamId])
}

model Expense {
  id            Int         @id @default(autoincrement())
  tournamentId  Int
  tournament    Tournament  @relation(fields: [tournamentId], references: [id])
  
  description   String
  amount        Decimal     @db.Decimal(10, 2)
  date          DateTime    @default(now())
  
  createdAt     DateTime    @default(now())

  @@index([tournamentId])
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  role          Role
  
  teams         Team[]
  
  createdAt     DateTime @default(now())
}
